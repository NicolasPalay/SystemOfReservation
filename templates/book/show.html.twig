{% extends 'base.html.twig' %}

{% block title %}{{book.titleBook}}{% endblock %}
 {% block headerImg %}  <a href="{{asset('assets/uploads/pictures/' ~ book.pictures[0].name) }}" data-toggle="lightbox" data-gallery="gallery">
     <img src="{{asset('assets/uploads/pictures/mini/300x300-' ~ book.pictures[0].name) }}" alt="{{book.titleBook}}">
 </a>

 {% endblock %}
    {% block headerPara %}<h1 class="h2 ca-h1-script mx-auto text-center">{{book.titleBook}}</h1>{% endblock %}
{%  block CssHeader %}mt-5{%  endblock %}
{% block body %}

    <section class="ca-book-container ca-book-background">
        <div class="img-book">
        {% for image in book.pictures|slice(1) %}
            <a href="{{asset('assets/uploads/pictures/' ~ image.name) }}" data-toggle="lightbox" data-gallery="gallery">
                <img src="{{asset('assets/uploads/pictures/mini/300x300-' ~ image.name) }}" alt="">
            </a>
        {% endfor %}
        </div>
        <p class="ca-book-content">{{book.content}}</p>




    </section>

{% endblock %}
{% block javascript %}
<script  src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>
<script>
$(document).on('click', '[data-toggle="lightbox"]', function(event) {
    event.preventDefault();
    $(this).ekkoLightbox();
});
</script>
{% endblock %}