{{ form_start(form) }}
<div class="ca-hairdresser-form">

    {{ form_row(form.user, {'label': 'Coiffeur', 'attr': {'class': 'special'}}) }}

{% for special in form.specialities %}

    {{ form_row(special, {'attr': {'class': 'special'}}) }}

{% endfor %}
    <div class="ca-hairdresser-form-picture">
    {% if hairdresser.id is empty %}
        {# Champ obligatoire pour la création #}
        {{ form_row(form.picture, { 'attr': {'required': 'required'} }) }}
    {% else %}
        {# Champ facultatif pour l'édition #}
        {{ form_row(form.picture) }}
    {% endif %}
</div>
    <div id="image-container">
    <!-- L'emplacement pour les images prévisualisées -->
</div>
</div>
<button class="btn pulse ca-btn">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}